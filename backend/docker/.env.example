# ===========================================
# Web3 DApp Store - Environment Configuration
# ===========================================
# Copy this file to .env and fill in the values
# WARNING: Never commit .env file to version control!

# --- Application ---
SPRING_PROFILES_ACTIVE=prod
SERVER_PORT=8080

# --- Database (PostgreSQL) ---
DB_HOST=postgres
DB_PORT=5432
DB_NAME=web3store
DB_USERNAME=postgres
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD
DB_POOL_INITIAL=10
DB_POOL_MAX=50

# --- Redis ---
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# --- Elasticsearch ---
ELASTICSEARCH_URIS=http://elasticsearch:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_ENABLED=true
ELASTICSEARCH_SYNC_ON_STARTUP=true

# --- MinIO Object Storage ---
MINIO_ENDPOINT=http://minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=CHANGE_ME_MINIO_SECRET

# --- JWT Authentication ---
JWT_SECRET=CHANGE_ME_MINIMUM_32_CHARACTERS_SECRET_KEY
JWT_EXPIRATION=86400000

# --- Google OAuth ---
# Get your client ID from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# --- PostgreSQL Container ---
POSTGRES_DB=web3store
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# --- MinIO Container ---
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=CHANGE_ME_MINIO_SECRET
